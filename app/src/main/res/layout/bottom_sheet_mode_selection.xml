<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bottom_sheet_background">

    <!-- Handle Bar -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="@color/divider_color"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:alpha="0.5" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvModeSelectionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Calendar Mode"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="20dp"
        android:gravity="center" />

    <!-- Cases Mode -->
    <LinearLayout
        android:id="@+id/layoutCasesMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/rounded_calender_mode"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="12dp">

        <!-- Cases Icon -->
        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/primary"
            android:gravity="center"
            android:layout_marginEnd="16dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_gavel"
                app:tint="@android:color/white" />

        </LinearLayout>

        <!-- Cases Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tvCasesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Court Cases Schedule"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvCasesDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View your court hearing dates, case schedules, and upcoming court appearances"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Selection Indicator -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/text_secondary"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Appointments Mode -->
    <LinearLayout
        android:id="@+id/layoutAppointmentsMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/rounded_calender_mode"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="12dp">

        <!-- Appointments Icon -->
        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/primary"
            android:gravity="center"
            android:layout_marginEnd="16dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_book_and_appoinment"
                app:tint="@android:color/white" />

        </LinearLayout>

        <!-- Appointments Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tvAppointmentsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Client Appointments"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvAppointmentsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View your client meeting schedules, consultation appointments, and client visits"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Selection Indicator -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/text_secondary"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Info Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Switch between court cases and client appointments view anytime using the filter button"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:alpha="0.7" />

</LinearLayout>