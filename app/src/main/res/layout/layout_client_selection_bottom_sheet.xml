<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background_client_search"
    android:padding="16dp">

    <!-- Handle Bar -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:background="@color/handle_bar_color" />

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select Client from Chat List"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color" />

        <ImageView
            android:id="@+id/ivCloseBottomSheet"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:contentDescription="Close" />

    </LinearLayout>

    <!-- Search View -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewClients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/search_view_background"
        app:queryHint="Search clients..."
        app:iconifiedByDefault="false" />

    <!-- Client List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvClientList"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scrollbars="vertical" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layoutEmptyState"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_no_clients"
            android:alpha="0.5" />

        <TextView
            android:id="@+id/tvEmptyState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No clients found in your chat list"
            android:textSize="16sp"
            android:textColor="@color/secondary_text_color"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>