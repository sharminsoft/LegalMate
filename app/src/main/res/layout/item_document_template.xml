<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardDocument"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Document Icon -->
        <ImageView
            android:id="@+id/imgDocumentIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_document_default"
            android:background="@drawable/bg_icon_circle"
            android:padding="12dp"
            android:scaleType="centerInside" />

        <!-- Document Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <!-- Title and Status Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtDocumentTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Document Title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColorPrimary"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Draft"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_status_draft"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:minWidth="50dp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Document Type -->
            <TextView
                android:id="@+id/txtDocumentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Document Type"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/bg_type_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp" />

            <!-- Created Date -->
            <TextView
                android:id="@+id/txtCreatedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Created: 01 Jan 2024"
                android:textSize="12sp"
                android:textColor="@color/textColorSecondary"
                android:drawableStart="@drawable/ic_calendar_small"
                android:drawablePadding="4dp"
                android:gravity="center_vertical" />

        </LinearLayout>

        <!-- More Options Arrow -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_forward"
            android:alpha="0.6" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>