<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FC"
    tools:context=".LawyerPortal.Fragments.LawyerHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/header_gradient_background"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile_picture"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile" />

            <LinearLayout
                android:id="@+id/ll_greeting_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/app_bar_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.02"
                    android:text="LegalMate"
                    android:textAlignment="center"
                    android:textColor="#1A237E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_notification"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="#FFFFFF"
                android:layout_gravity="center"
                android:background="@color/white"
                android:padding="5sp"
                android:src="@drawable/ic_notification"
                app:tint="#1A237E" />

        </LinearLayout>

        <!-- Welcome Greeting -->
        <TextView
            android:id="@+id/tv_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.01"
            android:text="Hello, Attorney Harper"
            android:textColor="#1A237E"
            android:textSize="18sp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Welcome back! Here's your dashboard overview"
            android:textColor="#6B7280"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:textSize="12sp" />

        <!-- Today's Schedule Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_todays_appointments"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:backgroundTint="#FFFFFF"
            android:visibility="visible"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/appointments_gradient_background"
                android:orientation="horizontal"
                android:padding="12dp">

                <LinearLayout
                    android:id="@+id/ll_appointments_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_appointments_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:letterSpacing="0.01"
                        android:text="Today's Schedule"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- RecyclerView for Today's Schedules -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_today_schedules"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:background="@drawable/appointments_list_background"
                        android:padding="10dp"
                        android:visibility="visible"
                         />

                    <!-- Empty State Text -->
                    <TextView
                        android:id="@+id/tv_no_schedules_today"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="No schedules for today"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:visibility="gone"
                        android:alpha="0.8" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_lady_justice"
                    android:layout_width="90dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:alpha="0.9"
                    android:scaleType="fitCenter"
                    android:src="@drawable/lady_justice_image" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Statistics Overview Card -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Statistics Overview"
            android:textColor="#1F2937"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_statistics_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFFFFF"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header with icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_analytics"
                        app:tint="#1A237E" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Performance Analytics"
                        android:textColor="#1A237E"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Statistics Grid in Single Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Total Clients Stat -->
                    <LinearLayout
                        android:id="@+id/ll_total_clients_stat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/stat_item_background"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="4dp"
                            android:src="@drawable/ic_clients"
                            app:tint="#3B82F6" />

                        <TextView
                            android:id="@+id/tv_total_clients_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="125"
                            android:textColor="#1F2937"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clients"
                            android:textAlignment="center"
                            android:textColor="#6B7280"
                            android:textSize="9sp" />

                    </LinearLayout>

                    <!-- Ongoing Cases Stat -->
                    <LinearLayout
                        android:id="@+id/ll_ongoing_cases_stat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/stat_item_background"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="4dp"
                            android:src="@drawable/ic_ongoing"
                            app:tint="#F59E0B" />

                        <TextView
                            android:id="@+id/tv_ongoing_cases_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="35"
                            android:textColor="#1F2937"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ongoing"
                            android:textAlignment="center"
                            android:textColor="#6B7280"
                            android:textSize="9sp" />

                    </LinearLayout>

                    <!-- Closed Cases Stat -->
                    <LinearLayout
                        android:id="@+id/ll_closed_cases_stat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/stat_item_background"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="4dp"
                            android:src="@drawable/ic_closed"
                            app:tint="#10B981" />

                        <TextView
                            android:id="@+id/tv_closed_cases_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="90"
                            android:textColor="#1F2937"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Closed"
                            android:textAlignment="center"
                            android:textColor="#6B7280"
                            android:textSize="9sp" />

                    </LinearLayout>

                    <!-- Upcoming Appointments Stat -->
                    <LinearLayout
                        android:id="@+id/ll_upcoming_appointments_stat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/stat_item_background"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="4dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="#8B5CF6" />

                        <TextView
                            android:id="@+id/tv_upcoming_appointments_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="5"
                            android:textColor="#1F2937"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upcoming"
                            android:textAlignment="center"
                            android:textColor="#6B7280"
                            android:textSize="9sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Success Rate Indicator (Optional Enhancement) -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp"
                    android:alpha="0.2"
                    android:background="#6B7280" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_trending_up"
                        app:tint="#10B981" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="72% Success Rate This Month"
                        android:textColor="#10B981"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+12%"
                        android:textColor="#10B981"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Quick Access Section -->
        <TextView
            android:id="@+id/tv_quick_access_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:text="Quick Access"
            android:textColor="#1F2937"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_quick_access_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:orientation="vertical">

            <!-- First Row of Quick Access -->
            <LinearLayout
                android:id="@+id/ll_quick_access_row_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_add_case"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/ll_add_case_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/quick_access_gradient_1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iv_add_case_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/ic_add"
                            app:tint="#FFFFFF" />

                        <TextView
                            android:id="@+id/tv_add_case_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add New Case"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_view_calendar"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/ll_view_calendar_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/quick_access_gradient_2"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iv_view_calendar_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="#FFFFFF" />

                        <TextView
                            android:id="@+id/tv_view_calendar_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Calendar"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Second Row of Quick Access -->
            <LinearLayout
                android:id="@+id/ll_quick_access_row_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_book_and_appoinment"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/ll_case_history_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/quick_access_gradient_3"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iv_book_and_appoinment_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/book_and_appoinment"
                            app:tint="#FFFFFF" />

                        <TextView
                            android:id="@+id/tv_book_appointment_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Appointments"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_manage_documents"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/ll_manage_documents_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/quick_access_gradient_4"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iv_manage_documents_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/ic_document"
                            app:tint="#FFFFFF" />

                        <TextView
                            android:id="@+id/tv_manage_documents_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage Documents"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <!-- Recent Activity Section -->
        <TextView
            android:id="@+id/tv_recent_activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:text="Recent Activity"
            android:textColor="#1F2937"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- RecyclerView for Recent Activity -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recent_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/recyclerview_background"
            android:nestedScrollingEnabled="false"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:padding="8dp"
            tools:listitem="@layout/item_lawyer_recent_activity" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>