<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Case Status Badge -->
        <TextView
            android:id="@+id/tvCaseStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/status_badge_background_case_tracking"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="Active"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Active" />

        <!-- Case Title -->
        <TextView
            android:id="@+id/tvCaseTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@id/tvCaseStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Property Dispute Case" />

        <!-- Case Type -->
        <TextView
            android:id="@+id/tvCaseType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/rounded_tag_outline"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:text="Civil"
            android:textColor="@color/primary"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCaseTitle"
            tools:text="Civil" />

        <!-- Case Number -->
        <TextView
            android:id="@+id/tvCaseNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Case No: #12345"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCaseType"
            tools:text="Case No: #12345" />

        <!-- Court Name -->
        <TextView
            android:id="@+id/tvCourtName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="High Court Division"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:drawableStart="@drawable/ic_court"
            android:drawablePadding="6dp"
            android:drawableTint="@color/text_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCaseNumber"
            tools:text="High Court Division" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/divider"
            app:layout_constraintTop_toBottomOf="@id/tvCourtName" />

        <!-- Lawyer Info Section -->
        <LinearLayout
            android:id="@+id/layoutLawyerInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivLawyerImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_person_ai"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/primary_light" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLawyerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advocate John Doe"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="Advocate John Doe" />

                <TextView
                    android:id="@+id/tvLawyerSpecialization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Civil Law Specialist"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    tools:text="Civil Law Specialist" />

            </LinearLayout>

            <!-- Next Court Date -->
            <LinearLayout
                android:id="@+id/layoutNextDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next Date"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvNextCourtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dec 25, 2024"
                    android:textColor="@color/primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="Dec 25, 2024" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Button -->
        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_arrow_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutLawyerInfo"
            app:tint="@color/text_secondary" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>