<?xml version="1.0" encoding="utf-8"?>
<!-- item_recent_activity.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Activity Image -->
        <ImageView
            android:id="@+id/ivActivityImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_court"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:padding="8dp" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical">

            <!-- Activity Type -->
            <TextView
                android:id="@+id/tvActivityType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Case Update"
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:layout_marginBottom="4dp" />

            <!-- Activity Title -->
            <TextView
                android:id="@+id/tvActivityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Case #12345: Hearing Scheduled"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp" />

            <!-- Activity Description -->
            <TextView
                android:id="@+id/tvActivityDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your hearing is scheduled for July 15th, 2024 at 10:00 AM."
                android:textSize="14sp"
                android:textColor="@color/gray_700"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Status Indicator -->
        <View
            android:id="@+id/vStatusIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/circle_status_indicator"
            android:layout_gravity="top"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>