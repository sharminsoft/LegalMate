<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_gravity="start"
    android:layout_marginBottom="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_sender_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_person_ai"
        android:layout_marginStart="2dp"
        />

    <!-- Message Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/received_message_background"
        android:padding="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="64dp"
        android:maxWidth="280dp">


        <!-- Message Text -->
        <TextView
            android:id="@+id/tv_received_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="16sp"
            android:lineSpacingMultiplier="1.2"
            android:text="Sure, I can help you with that. What specific legal issue are you facing?" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/tv_received_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="10sp"
            android:layout_marginTop="4dp"
            android:text="14:32" />

    </LinearLayout>

    <!-- Spacer to push message to left -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

</LinearLayout>