<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Handle Bar -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:alpha="0.3"
        android:background="@drawable/bottom_sheet_handle" />

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_schedule"
            app:tint="#1A237E" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTodayDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Today - August 13, 2025"
                android:textColor="#1A237E"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvScheduleCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 schedules"
                android:textColor="#6B7280"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:alpha="0.6"
            android:src="@drawable/ic_calendar"
            app:tint="#1A237E" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="#E5E7EB" />

    <!-- Schedules Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="All Schedules for Today"
        android:textColor="#374151"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- RecyclerView for All Today's Schedules -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTodaySchedules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:fadeScrollbars="true"
        android:background="@drawable/appointments_list_background"
        android:maxHeight="400dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:scrollbarThumbVertical="@drawable/scrollbar_thumb"
        android:scrollbars="vertical" />

    <!-- Footer Note -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:alpha="0.8"
        android:text="Tap on any schedule for more details"
        android:textAlignment="center"
        android:textColor="#9CA3AF"
        android:textSize="12sp" />

</LinearLayout>