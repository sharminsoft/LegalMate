<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:rippleColor="@color/primary"
    app:strokeColor="@color/outline_variant"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Status Indicator -->
        <View
            android:id="@+id/viewStatusIndicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/primary" />

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Case Title -->
                <TextView
                    android:id="@+id/tvCaseTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Personal Injury Case Consultation" />

                <!-- Status Chip -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipStatus"
                    style="@style/Widget.Material3.Chip.Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="12sp"
                    tools:text="Pending" />

            </LinearLayout>

            <!-- Client Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_person"
                    app:tint="@color/on_surface_variant" />

                <TextView
                    android:id="@+id/tvClientName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp"
                    tools:text="John Doe" />

            </LinearLayout>

            <!-- Date and Time Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <!-- Date -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/on_surface_variant" />

                    <TextView
                        android:id="@+id/tvAppointmentDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/on_surface_variant"
                        android:textSize="14sp"
                        tools:text="Dec 15, 2024" />

                </LinearLayout>

                <!-- Time -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/ic_time"
                        app:tint="@color/on_surface_variant" />

                    <TextView
                        android:id="@+id/tvAppointmentTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/on_surface_variant"
                        android:textSize="14sp"
                        tools:text="2:00 PM" />

                </LinearLayout>

            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_description"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="8dp"
                android:textColor="@color/on_surface_variant"
                android:textSize="13sp"
                android:visibility="visible"
                tools:text="I need legal consultation regarding a personal injury case. The incident occurred last month and I need advice on how to proceed with the claim." />

            <!-- Action Buttons -->
            <LinearLayout
                android:id="@+id/layoutActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <!-- Approve Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnApprove"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="Approve"
                    app:icon="@drawable/ic_check"
                    app:iconSize="18dp" />

                <!-- Reject Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReject"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="Reject"
                    android:textColor="@color/error"
                    app:icon="@drawable/ic_close"
                    app:iconSize="18dp"
                    app:iconTint="@color/error"
                    app:strokeColor="@color/error" />

                <!-- Client Details Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClientDetails"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Client"
                    app:icon="@drawable/ic_person"
                    app:iconSize="16dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>